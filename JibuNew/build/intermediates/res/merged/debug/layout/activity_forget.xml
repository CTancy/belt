<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/reg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40.0dp"
            android:gravity="center_vertical"
             >

            <ImageView
                android:id="@+id/id_imageview_phone"
                android:layout_width="10dp"
                android:layout_height="14.5dp"
                android:layout_marginLeft="4.0dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                
                android:background="@drawable/reg_phone" />

            <TextView
                android:id="@+id/id_textview_getcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#fff"
                android:textSize="14.0dp"
                android:singleLine="true"
                android:text="@string/get_code" />

            <EditText
                android:id="@+id/id_edittext_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="12dp"
                android:layout_toLeftOf="@id/id_textview_getcode"
                 android:layout_toRightOf="@id/id_imageview_phone"
                android:background="@null"
                android:hint="@string/phone_num"                
                android:textSize="14.0dp"
                android:textColor="#fff"
                android:textColorHint="#aaaaaa"
                />
        </RelativeLayout>
        
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:background="#aaaaaa"
            
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40.0dp"
            android:layout_marginTop="15.0dp"
            android:gravity="center_vertical"
             >

            <ImageView
                android:id="@+id/id_imageview_code"
                android:layout_width="11.5dp"
                android:layout_height="13.5dp"
                android:layout_marginLeft="4.0dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                
                android:background="@drawable/reg_code" />

            

            <EditText
                android:id="@+id/id_edittext_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="12dp"
                 android:layout_toRightOf="@id/id_imageview_code"
                android:background="@null"
                android:hint="@string/code"
                android:textSize="14.0dp"
                android:textColor="#fff"
                android:textColorHint="#aaaaaa"
                />
        </RelativeLayout>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:background="#aaaaaa"
            
            />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40.0dp"
            android:layout_marginTop="15.0dp"
            android:gravity="center_vertical"
             >

            <ImageView
                android:id="@+id/id_imageview_pwd"
                android:layout_width="11.5dp"
                android:layout_height="13.5dp"
                android:layout_marginLeft="4.0dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                
                android:background="@drawable/reg_pwd" />

            <ImageView
                android:id="@+id/id_imageview_eye"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                
                android:background="@drawable/open_eye" />

            <EditText
                android:id="@+id/id_edittext_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/id_imageview_pwd"
                android:layout_toLeftOf="@id/id_imageview_eye"
                android:background="@null"
                android:textSize="14.0dp"
                android:textColor="#fff"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:textColorHint="#aaaaaa"
                />
        </RelativeLayout>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:background="#aaaaaa"
            
            />
        
       
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45.0dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="30.0dp"
            android:text="@string/confirm" 
            android:gravity="center"
            android:background="@drawable/big_btn"
            android:textColor="#41b1f9"
            android:textSize="16.0dp"
            android:id="@+id/id_textview_ok"/>
    </LinearLayout>


    
	

    <LinearLayout
        android:id="@+id/login_bottom"
        android:layout_width="match_parent"
        android:layout_height="30.0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal" >

       

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="14.0dp"
            android:textColor="#ffffff"
            android:id="@+id/id_textview_login"
            android:text="@string/login" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:background="#ffffff" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="14.0dp"
            android:textColor="#ffffff"
            android:id="@+id/id_textview_phone_reg"
            android:text="@string/register" />

       
    </LinearLayout>

</RelativeLayout>