<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
   	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        >
		
   	    <LinearLayout 
   	        android:id="@+id/id_ll_icon"
   	        android:layout_width="wrap_content"
   	        android:layout_height="match_parent"
   	        android:orientation="vertical"
   	        >
   	        
   	    
   	   <TextView 
            android:id="@+id/id_textview_shang_xian"
            android:layout_width="1dp"
            android:layout_height="19.75dp"
            android:layout_marginLeft="32dp"
        	android:background="#dddddd">
        </TextView>
        
        <ImageView
        android:id="@+id/id_imageview_event_icon"
        android:layout_width="40.5dp"
        android:layout_height="40.5dp"
        android:layout_marginLeft="12dp"
        ></ImageView>
        

        

        
        <TextView 
            android:id="@+id/id_textview_xia_xian"
            android:layout_width="1dp"
            android:layout_height="19.75dp"
            android:layout_marginLeft="32dp"
        	android:background="#dddddd">
        </TextView>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/id_ll_icon">
            
            <TextView
                android:id="@+id/id_textview_sport_time_perid"
                android:layout_width="80dp"
                android:layout_height="14dp"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:alpha="0.5"
                android:text="12:00-14:00">
                
            </TextView>
            
            
            <TextView
                android:id="@+id/id_textview_sport_info"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text="XXXX"
                android:textSize="14sp">
                
            </TextView>
            

        </LinearLayout>
    </RelativeLayout>
	
