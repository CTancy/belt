<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.jibu.app"
    style="@style/CommonBg2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_linearlayout_title"
        style="@style/CommonTitleBg" >

        <LinearLayout
            android:id="@+id/id_linearlayout_title_left"
            style="@style/CommonTitleLeftBg" >

            <ImageView
                style="@style/CommonTitleLeftImg"
                android:background="@drawable/icon_common_back" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_linearlayout_title_center"
            style="@style/CommonTitleCenterBg" >

            <TextView
                android:id="@+id/id_textview_title_center"
                style="@style/CommonTitleText"
                android:text="@string/my_ebelt"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_linearlayout_title_right"
            style="@style/CommonTitleRightBg"
            android:visibility="invisible" >

            <ImageView
                style="@style/CommonTitleRightImg"
                android:background="@drawable/tongji" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
            <ScrollView 
                android:layout_width="match_parent"
            android:layout_height="match_parent"
                >
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
            <LinearLayout 
                android:layout_width="45.0dp"
            	android:layout_height="45.0dp"
            	android:layout_gravity="right"
            	android:layout_marginRight="30.0dp"
            	android:background="@drawable/icon_dianchi_bg"
            	android:orientation="vertical"
            	android:gravity="center"
                >
            	<ImageView 
            	    android:id="@+id/id_imageview_dc"
            	    android:layout_width="16.0dp"
            	    android:layout_height="7.0dp"
            	    android:layout_marginTop="6.0dp"
            	    android:background="@drawable/dc_10"
            	    />
            	<TextView 
            	    android:id="@+id/id_textview_dc"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:visibility="invisible"
            	    android:textColor="#fff"
            	     android:layout_marginTop="2.0dp"
            	    android:text="65%"
            	    android:textSize="12.0dp"
            	    
            	    />
            </LinearLayout>
            
            <com.jibu.app.view.RoundProgressBar2
            android:id="@+id/id_roundProgressBar2"
            android_custom:style="STROKE"
            android:layout_width="250dip"
            android:layout_height="250dip"
            android_custom:max="10000"
            android_custom:paddingBottom="60dip"
            android_custom:paddingTop="50dip"
            android_custom:roundColor="#33bbbbbb"
            android_custom:roundProgressColor="#ffffffff"
            android_custom:roundWidth="4dip"
            android_custom:textBottom="目标：10000"
            android_custom:textColor="#ffffff"
            android_custom:textIsDisplayable="true"
            android_custom:textSize="50.0dp"
            android_custom:textTop="@string/syncing" />
                <TextView
                    android:id="@+id/id_textview_xinghao"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:textColor="#fff"
            	     android:layout_marginTop="6.0dp"
            	    android:text="@string/xinghao_d013"
            	    android:textSize="14.0dp"
            	    
            	    />
                <TextView
                    android:id="@+id/id_textview_update_time"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:textColor="#ddd"
            	    android:layout_marginTop="2.0dp"
            	    android:text="@string/update_time"
            	    android:textSize="12.0dp"
            	    
            	    />
                </LinearLayout>
                </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/id_imageview_huifu"
                    android:layout_width="40.0dp"
                    android:layout_height="40.0dp"
                    android:background="@drawable/icon_huifu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/factory_set"
                    android:textColor="#000"
                    android:textSize="16.0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/id_imageview_update"
                    android:layout_width="40.0dp"
                    android:layout_height="40.0dp"
                    android:background="@drawable/icon_update" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_fireware"
                    android:textColor="#000"
                    android:textSize="16.0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/id_imageview_unbind"
                    android:layout_width="40.0dp"
                    android:layout_height="40.0dp"
                    android:background="@drawable/icon_unbind" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unbind"
                    android:textColor="#000"
                    android:textSize="16.0dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>