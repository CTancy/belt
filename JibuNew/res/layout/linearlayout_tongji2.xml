<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170.0dp"
        
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:layout_marginRight="20.0dp"
            android:layout_marginLeft="20.0dp"
            android:gravity="center"
            android:orientation="vertical" >
            <com.jibu.app.view.BFBView
                android:id="@+id/id_bfbview"
                android:layout_width="match_parent"
            android:layout_height="match_parent"
                >
                
            </com.jibu.app.view.BFBView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120.0dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="10.5dp"
                    android:layout_height="25dp"
                    android:background="@drawable/tongji2_move" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dp"
                    android:text="@string/sports"
                    android:textColor="#888888"
                    android:textSize="12.0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dp"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/id_textview_move_time_bfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14"
                        android:textColor="#444444"
                        android:textSize="30.0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.0dp"
                        android:text="%"
                        android:textColor="#888888"
                        android:textSize="12.0dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >
                
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="40.0dp"
                    android:background="#aaaaaa"
                    />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center"
                android:orientation="vertical" >
                
                <ImageView
                    android:layout_width="12.5dp"
                    android:layout_height="25dp"
                    android:background="@drawable/tongji2_no_move" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dp"
                    android:text="@string/sit"
                    android:textColor="#888888"
                    android:textSize="12.0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dp"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/id_textview_no_move_time_bfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="86"
                        android:textColor="#444444"
                        android:textSize="30.0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.0dp"
                        android:text="%"
                        android:textColor="#888888"
                        android:textSize="12.0dp" />
                </LinearLayout>
                
                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f9"
        android:orientation="vertical" >
        
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
        android:text="@string/sit_time_period"
        android:layout_marginTop="12.0dp"
        android:textSize="16.0dp"
        android:textColor="#888888"
        android:layout_marginBottom="12.0dp"
            />
        
        <com.jibu.app.view.NoMoveTongJiView
                android:id="@+id/id_nomovetongjiview"
                android:layout_width="match_parent"
            android:layout_height="200.0dp"
                >
        </com.jibu.app.view.NoMoveTongJiView>
 </LinearLayout>
</LinearLayout>