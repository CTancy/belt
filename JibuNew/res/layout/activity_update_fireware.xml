<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.jibu.app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/id_textview_updating_fireware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ebelt_updating_fireware"
        android:textSize="25sp"
        android:textColor="#ffffff"
        />

    <TextView
        android:id="@+id/id_textview_updating_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize ="12sp"
        android:textColor="#ffffff"
        android:alpha="0.6"
        android:text="@string/ebelt_updating_fireware_info" />
    
    <com.jibu.app.view.RoundProgressBar2 
        android:id="@+id/id_roundprogressbar_update_fireware"
        android:layout_marginTop="50dp"
        android_custom:style="STROKE"
        android:layout_width="250dip"
        android:layout_height="250dip"
        android_custom:max="10000"
        android_custom:paddingBottom="60dip"
        android_custom:paddingTop="50dip"
        android_custom:roundColor="#33bbbbbb"
        android_custom:roundProgressColor="#ffffffff"
        android_custom:roundWidth="4dip"
        />
    <TextView
        android:id="@+id/id_textview_complete_bfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="@string/already_complete"></TextView>"
</LinearLayout>
