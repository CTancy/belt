<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:android_custom="http://schemas.android.com/apk/res/com.jibu.app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
     >
     	<LinearLayout
                    android:id="@+id/id_linearlayout_title"
                    style="@style/CommonTitleBg" >

                    <LinearLayout
                        android:id="@+id/id_linearlayout_title_left"
                        android:visibility="invisible"
                        style="@style/CommonTitleLeftBg" >

                        <ImageView
                            style="@style/CommonTitleLeftImg"
                            android:background="@drawable/icon_common_back" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id_linearlayout_title_center"
                        style="@style/CommonTitleCenterBg"
                        android:visibility="visible"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/id_textview_title_center"
                            style="@style/CommonTitleText"
                            android:text="@string/anti_lost"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id_linearlayout_title_right"
                        style="@style/CommonTitleRightBg" >
                        <TextView
                            style="@style/CommonTitleText"
                            android:textColor="#fff" 
                            android:visibility="invisible"
                            android:text="@string/complete"/>
                    </LinearLayout>
            </LinearLayout>
            <RelativeLayout 
                android:layout_width="250dp"
            	android:layout_height="250dp"
            	android:layout_centerHorizontal="true"
            	android:layout_marginTop="120dp">
           <com.jibu.app.view.RoundProgressBar3
            android:id="@+id/id_roundProgressBar3"
            android:layout_centerInParent="true"
            android_custom:style="STROKE"
            android:layout_width="240dip"
            android:layout_height="240dip"
            android_custom:max="10000"
            android_custom:paddingBottom="60dip"
            android_custom:paddingTop="50dip"
            android_custom:roundColor="#33bbbbbb"
            android_custom:roundProgressColor="#ffffffff"
            android_custom:roundWidth="4dip"
            android_custom:textBottom="目标：10000"
            android_custom:textColor="#ffffff"
            android_custom:textIsDisplayable="true"
            android_custom:textSize="50.0dp"
            android_custom:textTop="@string/syncing" />    
			<ImageView 
			    android:layout_width="220dp"
            	android:layout_height="220dp"
            	android:layout_centerInParent="true"
            	android:background="@drawable/belt"/>
           
	
			</RelativeLayout>
	
    
          <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="呼叫" 
            android:background="@drawable/login_btn"
            android:textColor="@color/call_btn"
            android:textSize="16.0dp"
            android:id="@+id/id_textview_call"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal" >

        
        <LinearLayout
        android:layout_width="0.0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="20dp"
            android:text="我的腰带" 
            android:gravity="center"
            android:background="@drawable/lost_button_bg"
            android:textColor="@color/lost_btn"
            android:textSize="16.0dp"
            android:id="@+id/id_textview_my_belt"/>

       </LinearLayout>
       
        <LinearLayout
        android:layout_width="0.0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:clickable="true"
            android:enabled="true"
            android:text="设置" 
            android:background="@drawable/lost_button_bg"
            android:textColor="@color/lost_btn"
            android:textSize="16.0dp"
            android:id="@+id/id_textview_setup"/>
            

       </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>