<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_linearlayout_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
     >

    <LinearLayout
     android:layout_width="230.0dp"
     android:layout_height="275.0dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/popup_bg"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <TextView 
        android:id="@+id/id_textview_connecting_title"
        android:layout_width="wrap_content"
    	android:layout_height="40.0dp"
    	android:text="@string/refreshing"
        android:textColor="#fff"
        android:textSize="18.0dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        />
        <ProgressBar
            android:id="@+id/id_progressbar_"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/id_textview_connecting_title"
            ></ProgressBar>
      
    </RelativeLayout>

    <!-- 
    <ScrollView 
         android:layout_width="match_parent"
    	 android:layout_height="195.0dp"
        >
        <LinearLayout 
            android:id="@+id/id_linearlayout_devices"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
            >
            
            
        </LinearLayout>
        
    </ScrollView>
     -->
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="195.0dp"
         android:gravity="center"
         android:orientation="vertical"
         >
         <ImageView 
             android:layout_width="93dp"
             android:layout_height="36dp"
             android:background="@drawable/shangshiyi"/>
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center_vertical"
             >
             <ImageView 
                 android:layout_width="36.7dp"
                 android:layout_height="39.3dp"
                 android:layout_marginLeft="55dp"
                 android:background="@drawable/phone"/>
             <ImageView 
                 android:layout_width="55.6dp"
                 android:layout_height="55.6dp"
                 android:layout_marginLeft="40dp"
                 android:background="@drawable/belt"/>
         </LinearLayout>
         <ImageView 
             android:layout_width="93dp"
             android:layout_height="36dp"
             android:background="@drawable/xiashiyi"/>
     </LinearLayout>
    <TextView 
        android:id="@+id/id_textview_cancel_at_connecting"
        android:layout_width="match_parent"
    	android:layout_height="40.0dp"
    	android:text="@string/cancel"
        android:textColor="#57B8F7"
        android:textSize="18.0dp"
        android:gravity="center"
        android:background="@drawable/popup_button_bg"
        
        />
    
    </LinearLayout>

</LinearLayout>